<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order_succesful">

    <ScrollView android:id="@+id/_success_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                android:id="@+id/_bg___14_success_1"
                android:layout_width="match_parent"
                android:layout_height="667dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/_bg___14_success_1_shape" />

            <ImageView android:id="@+id/close"
                android:src="@drawable/close"
                android:contentDescription="close"
                android:layout_marginStart="320dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="36dp"
                android:layout_width="18dp"
                android:layout_height="18dp" />


            <RelativeLayout android:id="@+id/text"
                android:layout_marginTop="162dp"
                android:layout_marginStart="62dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >


                <RelativeLayout android:id="@+id/text_ek1"
                    android:layout_marginTop="129dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/checkout"
                        android:layout_width="185dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/amarante"
                        android:gravity="center"
                        android:text="MY ORDERS"
                        android:textColor="@color/checkout_color"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/your_order_was_placed_successfully__for_more_details__check_all_my_orders_page_under_profile_tab"
                        android:layout_width="252dp"
                        android:layout_height="75.5dp"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="-3dp"
                        android:layout_marginTop="53dp"
                        android:fontFamily="@font/amarante"
                        android:gravity="center"
                        android:text="@string/your_order_was_placed_successfully__for_more_details__check_all_my_orders_page_under_profile_tab_string"
                        android:textColor="@color/checkout_color"
                        android:textSize="15sp" />

                </RelativeLayout>


                <RelativeLayout android:id="@+id/button"
                    android:layout_marginTop="297dp"
                    android:layout_marginStart="43dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <View android:id="@+id/base"
                        android:background="@drawable/base_shape"
                        android:layout_marginLeft="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="165dp"
                        android:layout_height="46dp" />

                    <TextView
                        android:id="@+id/my_orders"
                        android:layout_width="79dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/amarante"
                        android:gravity="center"
                        android:text="ORDERS"
                        android:textColor="@color/my_orders_color"
                        android:textSize="12sp" />


                    <RelativeLayout android:id="@+id/icon"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="128dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <View android:id="@+id/rectangle_2"
                            android:background="@drawable/rectangle_2_shape"
                            android:layout_marginLeft="0dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="28.79736328125dp"
                            android:layout_height="29.620239257812dp" />

                        <ImageView android:id="@+id/path_11"
                            android:src="@drawable/path_11"
                            android:contentDescription="path_11"
                            android:layout_marginLeft="11dp"
                            android:layout_marginStart="11dp"
                            android:layout_marginTop="9dp"
                            android:layout_width="7.582275390625dp"
                            android:layout_height="12.518981933594dp" />

                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout android:id="@+id/icon_ek1"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="75dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <View android:id="@+id/ellipse_17"
                        android:background="@drawable/ellipse_17_shape"
                        android:layout_marginLeft="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="101dp"
                        android:layout_height="101dp" />

                    <ImageView android:id="@+id/path_23"
                        android:src="@drawable/path_23"
                        android:contentDescription="path_23"
                        android:layout_marginLeft="31dp"
                        android:layout_marginStart="31dp"
                        android:layout_marginTop="36dp"
                        android:layout_width="40.389892578125dp"
                        android:layout_height="31.098571777344dp" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</HorizontalScrollView>