<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dummyfrag_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_bg___12_cart_shape"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav_view"
        android:id="@+id/recycler_holder">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cart_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/bottom_nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout android:id="@+id/divider"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <RelativeLayout android:id="@+id/button"
                android:layout_marginTop="20dp"
                android:layout_marginStart="170dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <View android:id="@+id/rectangle_4"
                    android:background="@drawable/rectangle_4_shape"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="165dp"
                    android:layout_height="46dp" />

                <TextView
                    android:id="@+id/checkout"
                    android:layout_width="73dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/amarante"
                    android:gravity="center"
                    android:text="CHECKOUT"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />


                <RelativeLayout android:id="@+id/group_16"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="128dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <View android:id="@+id/rectangle_2"
                        android:background="@drawable/rectangle_2_shape"
                        android:layout_marginLeft="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="28.79736328125dp"
                        android:layout_height="29.620239257812dp" />

                    <ImageView android:id="@+id/path_11"
                        android:src="@drawable/path_11"
                        android:contentDescription="path_11"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="9dp"
                        android:layout_width="7.582275390625dp"
                        android:layout_height="12.51904296875dp" />

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout android:id="@+id/details"
                android:layout_marginTop="14dp"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/total_show"
                    android:layout_width="35dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:alpha="0.5"
                    android:textSize="15sp"
                    android:fontFamily="@font/amarante"
                    android:text="Total"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/free_domestic_shipping"
                    android:layout_width="131dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="41dp"
                    android:fontFamily="@font/aclonica"
                    android:text="Local shipping"
                    android:textColor="@color/home_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="78dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/aclonica"
                    android:text="Total"
                    android:textColor="@color/page_title_color"
                    android:textSize="15sp" />

            </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>
</RelativeLayout>