<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_comment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout android:id="@+id/review"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <EditText
            android:id="@+id/commenter_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:autofillHints=""
            android:hint="Enter your comments here"
            android:inputType="textMultiLine"
            android:lines="10"
            android:minLines="5"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:textColorHint="#A81A1A"
            android:visibility="visible" />

        <TextView
            android:id="@+id/commenters_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/aclonica"
            android:text="Jane doe "
            android:textColor="@color/lorem_ipsum_dolor_sit_amet__consectetur_adipiscing_elit__sed_do_eiusmod_tempor_incididunt_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/comment_date"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="212dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:alpha="0.5"
            android:fontFamily="@font/aclonica"
            android:text="10_oct_2018"
            android:textColor="#1C1F32"
            android:textSize="12sp" />


        <RelativeLayout android:id="@+id/icon"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <View android:id="@+id/ellipse_12"
                android:background="@drawable/ellipse_12_shape"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/jd"
                android:layout_width="31dp"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:text="JD "
                android:textColor="@color/jd_color"
                android:textSize="22sp" />

        </RelativeLayout>
        <RelativeLayout android:id="@+id/post_comment"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/commenter_comments"
            android:layout_marginStart="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <View android:id="@+id/rectangle_4"
                android:background="@drawable/rectangle_4_shape"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="165dp"
                android:layout_height="46dp" />

            <TextView
                android:id="@+id/checkout"
                android:layout_width="73dp"
                android:layout_height="18dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginStart="31dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/amarante"
                android:gravity="center"
                android:text="COMMENT"
                android:textColor="#ffffff"
                android:textSize="12sp" />


            <RelativeLayout android:id="@+id/group_16"
                android:layout_marginTop="8dp"
                android:layout_marginStart="128dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <View android:id="@+id/rectangle_2"
                    android:background="@drawable/rectangle_2_shape"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="28.79736328125dp"
                    android:layout_height="29.620239257812dp" />

                <ImageView android:id="@+id/path_11"
                    android:src="@drawable/path_11"
                    android:contentDescription="path_11"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="9dp"
                    android:layout_width="7.582275390625dp"
                    android:layout_height="12.51904296875dp" />

            </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>