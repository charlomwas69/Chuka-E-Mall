<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout android:id="@+id/review"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/commentsy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="39dp"
            android:fontFamily="@font/amarante"
            android:scrollbars="vertical"
            android:text="@string/lorem_ipsum_dolor_sit_amet__consectetur_adipiscing_elit__sed_do_eiusmod_tempor_incididunt_string"
            android:textColor="@color/lorem_ipsum_dolor_sit_amet__consectetur_adipiscing_elit__sed_do_eiusmod_tempor_incididunt_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nameeey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/aclonica"
            android:text="Jane doe "
            android:textColor="@color/lorem_ipsum_dolor_sit_amet__consectetur_adipiscing_elit__sed_do_eiusmod_tempor_incididunt_color"
            android:textSize="12sp"  />

        <TextView
            android:id="@+id/datey"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="212dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:alpha="0.5"
            android:fontFamily="@font/aclonica"
            android:text="10_oct_2018"
            android:textColor="#1C1F32"
            android:textSize="12sp" />


        <RelativeLayout android:id="@+id/icon"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <View android:id="@+id/ellipse_12"
                android:background="@drawable/ellipse_12_shape"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/jd"
                android:layout_width="31dp"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:text="jd "
                android:textColor="@color/jd_color"
                android:textSize="22sp" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>